# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# OpenAI API Configuration
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Google OAuth Configuration (for both Bot and MCP Server)
# Get these from your Google Cloud Console project
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE
# This URI must match the one registered in Google Cloud Console AND the one the MCP server/bot expects for the callback
# For MCP server running on port 3000:
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback
# If using bot fallback on port 8080:
# GOOGLE_REDIRECT_URI=http://localhost:8080/callback

# MCP Server Configuration (if using external MCP)
# The URL the bot uses to communicate with the MCP server inside Docker network
MCP_SERVER_URL=http://google-calendar-mcp:3000

# MCP Server Specific (if not overridden in docker-compose.yml)
# AUTH_METHOD=google_cloud # Already set in docker-compose.yml, but can be defined here
# PORT=3000 # Already set in docker-compose.yml
# NODE_ENV=production # Already set in docker-compose.yml