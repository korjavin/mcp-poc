# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN_HERE

# OpenAI API Configuration
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Google OAuth Configuration (Bot Only - Internal Flow)
# Get these values from the credentials.json file downloaded from Google Cloud Console
# --- Values from credentials.json ---
GOOGLE_PROJECT_ID=YOUR_PROJECT_ID_FROM_JSON
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GOOGLE_CLIENT_ID=YOUR_CLIENT_ID_FROM_JSON
GOOGLE_CLIENT_SECRET=YOUR_CLIENT_SECRET_FROM_JSON
# You only need ONE redirect URI here for the bot itself.
# It MUST be listed in the redirect_uris array within your credentials.json AND registered in Google Cloud Console.
# It should match the host/port the bot's callback server listens on (default 8080)
GOOGLE_REDIRECT_URI=http://localhost:8080/callback